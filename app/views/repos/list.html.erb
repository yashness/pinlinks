

<!-- Secure portion starts (show only if current user is present) -->
<% if not current_user.nil? %>
      <div class="links new">
        <h2>Drop your links Here</h2>
        <%= form_tag("/create_links", :method=>'get', :multipart => true) do %>
        <table >
          <tr>
            <th>Repo Name</th>
            <td><%= text_field_tag "repo_name" %></td>
          </tr>
          <tr>
            <th>Links</th>
            <td><%= text_area_tag "all_links" %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= submit_tag "Drop Links" , class: "btn btn-info"%>
            </td>
          </tr>
        </table >
        <%end%>
      </div>


      <div class="repo new">
        <h2>Create repo</h2>
        <%= form_for(:repo, :url => {:action => 'create'}) do |f| %>
        <table >
          <%= f.hidden_field :user_id, :value => current_user.id%>
          <tr>
            <th><%= f.label(:name) %></th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th><%= f.label(:tags) %></th>
            <td><%= f.text_field(:tags) %></td>
          </tr>
        </table>
          
          <div class="form-buttons">
            <%= submit_tag "Create Folder" , class: "btn btn-info"%>
          </div>
          
        <% end %>
      </div>
<%end%>
<!-- Secure portion ends ( show only if current user is present) -->

<div class="list_of_repos">	
            <table class="table">
              <thead>

              </thead>
              <tbody>
                <% @repos.each do |repo| %>
                    <tr class="<%= cycle('odd','even') %>">                   
                          <td><%= link_to( "#{repo.name}" , "/#{@user.profile_name}/#{repo.name}") %>
                          </td>
                          <td><%= "created " + time_ago_in_words(repo.created_at) + " ago" %>
                          </td>
                          <td><%= link_to("Delete Folder" , "/delete_repo/#{repo.id}" , { confirm: "Are you sure, you want to delete this folder?"}) %>
                         </td>
                  </tr>
                  <%end%> 
              </tbody>
            </table>
</div>