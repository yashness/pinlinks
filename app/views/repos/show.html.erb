<%= render(:partial => 'shared/catch_all_links', :locals => {:links => @links})%>

<div class="links new">
  <%= form_tag("/create_links", :method=>'get', :multipart => true) do %>
  <table >
      <%= hidden_field_tag "repo_name", @repo.name  %>
    <tr>
      <td><%= text_area_tag "all_links" , nil , placeholder: 'Drop all links here'%></td>
    </tr>
    <tr>
      <td>
        <%= submit_tag "Drop Links" , class: "btn btn-info"%>
      </td>
    </tr>
  </table >
  <%end%>
</div>
<%if  !@has_forked_this_repo && !@is_user_same %>
  <%= link_to "Fork ", "/fork_repo/#{@user.id}/#{@repo.id}"  %>
<%end%>
<!-- show list of links in this repo -->
<div class="list_of_links"> 
            <table class="table">
              <thead>
                Links in this Repo:
              </thead>
              <tbody>
              <% owner = current_user==@repo.user %>
                <% @links.each do |link| %>
                    <tr class="<%= cycle('odd','even') %>">                   
                      <td> 
                        <%= link_to( "#{link.actual_link}" , "#{link.actual_link}" , method: :get) %>
                      </td>
                      <td>
                        <%= render(:partial => 'shared/show_link_tags', :locals => {:link => link})%>
                      </td>
                      <td>
                        <%if not link.description.nil? %>
                            <%= link.description %>
                        <%end%>
                      </td>
                      <% if owner %>
                      <td> 
                        <%= render(:partial => 'shared/add_tags_and_describe', :locals => {:link => link})%>
                      </td>
                      <td> 
                        <%= render(:partial => 'shared/catch_link', :locals => {:link => link})%>
                      </td>
                        <td><%= link_to("Delete " , "/#{@repo.name}/delete_link/#{link.id}") %></td>
                      <% end %>
                  </tr>
                  <%end%> 
              </tbody>
            </table>
</div>

