<%= form_tag("/add_tags_and_describe", remote: true , :id => "add_tags_and_describe_#{link.id.to_s}") do %>
	<%= text_field_tag :tags, nil, placeholder: "Add Tags" %>
	<%= text_field_tag :description, nil, placeholder: "Describe" %>
	<%= hidden_field_tag :link_id, "#{link.id}" %>
  	<%= submit_tag "Submit" , style: "visibility:hidden;" %>
<% end %>