	<%= text_field_tag :new_name, nil, placeholder: "Rename Folder" %>
	<%= text_field_tag :tags, nil, placeholder: "Add Tags" %>
	<%= hidden_field_tag :repo_id, "#{repo.id}" %>
  	<%= submit_tag "Submit" , style: "visibility:hidden;" %>
<% end %>