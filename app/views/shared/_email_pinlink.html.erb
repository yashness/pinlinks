        <div id="<%= 'email_form_' + link.id.to_s %>" class="demo-description" style="display: none; ">
           <%= form_tag( send_pinlink_path , {:remote => true , :method => :post , :id => "send_links_form_#{link.id}"  }) do %>
               <div class="Receipients">
                    <%= text_area_tag "receipients" , nil , placeholder: 'Enter comma-seperated receipients\' email'%>
                </div>
                <div class="Compose-Message">
                    <%= text_area_tag "compose_message" , nil , placeholder: 'Compose Message' %>
               </div>
               <div class="Links" style="display: none; ">
                    <%= text_area_tag "send_link_id" , link.id %>
               </div>
               <p>Link To Be Sent</p>
               <div class ="to_send_links">
                    <%= text_field_tag "to_send_link" , link.actual_link, :disabled => true%>
               </div>
               <div class="Submit">
                    <%= submit_tag "Send Email" , :class => "btn btn-info" , :id => "send_links"%>
               </div>
           <%end%>
           <%= link_to 'Cancel', "/", :rel => "modal:close" %>
        </div>