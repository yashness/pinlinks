<script type="text/javascript">
jQuery(document).ready( function () {
   $('#receipients').keydown( function(e) {
    if (e.keyCode == 9 || e.keyCode == 32 || e.keyCode == 188 ) {
      e.preventDefault();
      var str = $(this).val();
      if(!(str.substr(-1) === " ") && str.trim()){
            $(this).val(str + " , " );
      }

    }
   });
});
