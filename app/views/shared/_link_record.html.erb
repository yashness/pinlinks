  <td> 
      <%= link_to( "#{link.actual_link}" , "#{link.actual_link}" , method: :get) %>
  </td>


  <td id=   "<%= 'link_tags_' + link.id.to_s %>" >
      <%= render(:partial => 'shared/show_link_tags', :locals => {:link => link})%>
  </td>
  <td id= "<%= 'link_description_' + link.id.to_s %>" >
        <%= link.description if not link.description.nil?%>
  </td>


  <% if owner %>
      <td  > 
          <%= render(:partial => 'shared/add_tags_and_describe', :locals => {:link => link})%>
      </td>
      <td> 
          <%= render(:partial => 'shared/catch_link', :locals => {:link => link})%>
      </td>
      <td>
         <%=link_to("Delete Link", delete_link_path(:repo_name => link.repo.name , :link_id => link.id) , :class => "link tag" , :method => :post , :remote => true)%>
      </td>
  <% end %>