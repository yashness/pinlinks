<% session_repos = session[:repo_names].split(",").uniq rescue []%>
  <table class="table">
    <thead>
          <%= (session_repos.length > 0 rescue false) ? "Repos created in this Session:" : "No Repo yet created in this session!"%>
    </thead>
    <tbody id="repos_in_session">
      <% session_repos.each do |repo| %>
        <br/>
        <tr> <%=link_to("www.pinlinks.com/no_user/" + repo, no_user_repo_path(:repo_name => repo ) , :class => "link tag" , :method => :get)%> </tr>
      <%end%> 
    </tbody>
  </table>

<div id="forget_session_repos"> 
  <%if not session[:repo_names].blank? %>
    <%=link_to("Forget Session Repos", forget_session_repos_path , :class => "btn btn-info" , :method => :post , :remote => true)%>
  <%end%>
</div>